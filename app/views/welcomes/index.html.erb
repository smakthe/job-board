<div class="jumbotron">
  <h1>Welcome to Job Board</h1>
  <p>Find the perfect job or post new opportunities</p>
  <% if job_seeker_signed_in? %>
    <%= link_to 'View Jobs', jobs_path, class: 'btn btn-primary' %>
  <% elsif recruiter_signed_in? %>
    <%= link_to 'Post a New Job', new_job_path, class: 'btn btn-primary' %>
  <% else %>
    <div class="mt-3">
      <%= link_to 'Job Seeker Sign In', new_job_seeker_session_path, class: 'btn btn-primary mr-2' %>
      <%= link_to 'Recruiter Sign In', new_recruiter_session_path, class: 'btn btn-secondary mr-2' %>
      <%= link_to 'Register', welcomes_register_path, class: 'btn btn-outline-primary' %>
    </div>
  <% end %>
</div>

<div class="row mt-5">
  <div class="col-md-8">
    <h2>Latest Job Postings</h2>
    <% Job.order(created_at: :desc).limit(5).each do |job| %>
      <div class="card mb-3">
        <div class="card-body">
          <h5 class="card-title"><%= job.title %></h5>
          <h6 class="card-subtitle mb-2 text-muted"><%= job.location %></h6>
          <p class="card-text"><%= truncate(job.description, length: 150) %></p>
          <%= link_to 'View Details', job_path(job), class: 'card-link' %>
        </div>
      </div>
    <% end %>
    <%= link_to 'View All Jobs', jobs_path, class: 'btn btn-outline-primary' %>
  </div>
  
  <div class="col-md-4">
    <div class="card">
      <div class="card-header">
        Why Join Our Platform?
      </div>
      <div class="card-body">
        <ul class="list-group list-group-flush">
          <li class="list-group-item">Access to top job opportunities</li>
          <li class="list-group-item">Easy application process</li>
          <li class="list-group-item">Track your applications</li>
          <li class="list-group-item">Direct contact with recruiters</li>
        </ul>
      </div>
    </div>
  </div>
</div> 