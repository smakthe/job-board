<div class="container mt-4">
  <div class="row">
    <div class="col-md-12 mb-4">
      <h1>Post a New Job</h1>
      <%= link_to '← Back to Jobs', jobs_path, class: 'btn btn-outline-secondary' %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card">
        <div class="card-body">
          <%= render 'form', job: @job %>
        </div>
      </div>
    </div>
  </div>
</div> 